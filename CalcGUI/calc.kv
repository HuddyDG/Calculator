<Calculator>:
    id: calculator
    display: entry
    rows: 6
    padding: 3
    spacing: 3
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(48)
        spacing: 3
        MDTextField:
            id: entry
            font_size: 32
            hint_text: "Input"
    BoxLayout:
        spacing:3
        MDRaisedButton:
            text: "Graph"
            on_press: calculator.graphing(entry.text)
        MDRaisedButton:
            text: "("
            on_press: entry.text += self.text
        MDRaisedButton:
            text: ")"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "x"
            on_press: entry.text += "x"
    BoxLayout:
        spacing: 3
        MDRaisedButton:
            text: "7"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "8"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "9"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "+"
            on_press: entry.text += self.text
    BoxLayout:
        spacing: 3
        MDRaisedButton:
            text: "4"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "5"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "6"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "+"
            on_press: entry.text += self.text
    
    BoxLayout:
        spacing: 3
        MDRaisedButton:
            text: "1"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "2"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "3"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "*"
            on_press: entry.text += self.text
    BoxLayout:
        spacing: 3
        MDRaisedButton:
            text: "AC"
            on_press: entry.text = ""
        MDRaisedButton:
            text: "0"
            on_press: entry.text += self.text
        MDRaisedButton:
            text: "="
            on_press: calculator.standard(entry.text)
        MDRaisedButton:
            text: "/"
            on_press: entry.text += self.text



 
